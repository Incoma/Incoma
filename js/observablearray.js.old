define(['event'], function(Events) {
	function ObservableArray(initialValues) {
		var values = initialValues || [];
		
		this.pushed = new Events.EventImpl();
		
		this.length() = function(index) {
			return values.length;
		}
		
		this.get = function(index) {
			if(index < 0) return values[values.length-index];
			else if(index != null) return values[index];
			else return values.slice();
		};
		
		this.push = function(elem) {
			values.push(elem);
			this.pushed.raise({ element: elem });
		};
	}
});